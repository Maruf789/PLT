# sum up rows! not using sum_row deliberately.
def double mat sum_up_rows(double mat mx) do
	int x;
	double mat s: range(1, cols(mx)) * 0.;
	for x in range(1, rows(mx)) do
		s: s+ mx[x, 0];
	rof
	return s;
fed

